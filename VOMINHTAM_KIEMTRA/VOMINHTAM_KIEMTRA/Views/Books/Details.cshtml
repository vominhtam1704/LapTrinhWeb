@model VOMINHTAM_KIEMTRA.Models.Book

@{
    ViewData["Title"] = "Chi tiết sách";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" asp-action="Index" asp-controller="Books">Trang Chủ</a>
        <div class="collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="#">Đăng Ký</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Đăng Nhập</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Giỏ Hàng</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    <div class="row">
        <!-- Cột trái: thống kê chủ đề -->
        <div class="col-md-2">
            <h5>Chủ đề</h5>
            <ul class="list-unstyled">
                @if (ViewBag.CategoryCounts != null)
                {
                    foreach (var item in ViewBag.CategoryCounts)
                    {
                        <li><a href="#">@item.Name (@item.Count)</a></li>
                    }
                }
                else
                {
                    <li>Không có dữ liệu</li>
                }
            </ul>
        </div>

        <!-- Nội dung chi tiết -->
        <div class="col-md-10">
            <h4 class="text-center mb-4">THÔNG TIN CHI TIẾT SÁCH</h4>
            <div class="row">
                <!-- Ảnh sách -->
                <div class="col-md-4 text-center">
                    <img src="~/Content/ImageBooks/@Model.ImagePath" class="img-thumbnail" style="max-height: 350px;" />
                </div>

                <!-- Thông tin sách -->
                <div class="col-md-8">
                    <h5><strong>Tên sách:</strong> <span class="text-danger">@Model.Title</span></h5>
                    <h6><strong>Tác giả:</strong> <span class="text-danger">@Model.Author</span></h6>
                    <p><strong>Thể loại:</strong> @Model.Category?.Name</p>

                    <p>
                        <strong>Mô tả:</strong><br />
                        @Model.Description
                    </p>

                    <p><strong>Giá bán:</strong> <span class="text-danger fw-bold">61000 VNĐ</span></p>

                    <button class="btn btn-primary">Đặt mua</button>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="text-center mt-4 mb-3 text-muted">
    © 2023 – Lập trình Web
</footer>
