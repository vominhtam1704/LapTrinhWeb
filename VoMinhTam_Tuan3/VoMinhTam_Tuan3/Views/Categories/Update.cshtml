@model VoMinhTam_Tuan3.Models.Category
@{
    ViewData["Title"] = "Sửa danh mục";
}

<div class="container mt-5">
    <h2 class="text-warning mb-4">Sửa danh mục</h2>

    <form asp-action="Update" method="post" class="p-4 border rounded bg-light shadow-sm">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Tên danh mục</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning text-white">Cập nhật</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
    </form>
</div>
